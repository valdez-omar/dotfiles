browser "/usr/bin/firefox %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key g home
bind-key G end
bind-key u pageup
bind-key d pagedown
bind-key U show-urls
bind-key a toggle-article-read
bind-key b bookmark

